@page
@model LoginModel


<div class="loginCard text-center" style="margin-top:120px;margin-bottom:30px;">

    <form id="account" method="post">
        <div class="circleIcon">
            <i class="fas fa-user"></i>
        </div>
        <h4 class="titleLogin mt-3">Logowanie</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group inputLogin">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group inputLogin">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <label><a asp-page="./ForgotPassword" style="font-size:14px;">Przypomnienie hasła</a></label>
        </div>
        <div class="form-group mb-4">
            <button type="submit" class="btn add-btn">Zaloguj się</button>
        </div>
        <hr />
        <div class="form-group mb-0 otherLink">
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Utwórz nowe konto</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij ponownie potwierdzenie</a>
            </p>
        </div>
    </form>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
