@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Dezaktywacja konta";
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p class="mt-3">
            <strong>Dezaktywacja spowoduje nieodwracalne usunięcie konta oraz ogłoszeń z nim powiązanych. Operacja będzie nieodwracalna.</strong>
        </p>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-submit-xsm mt-4 mobileCenter">Dezaktywuj</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
