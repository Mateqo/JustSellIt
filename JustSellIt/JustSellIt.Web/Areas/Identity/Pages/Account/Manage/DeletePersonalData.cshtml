@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Dezaktywacja konta";
}


<partial name="_AlertPanel" />
<h4>@ViewData["Title"]</h4>
<div class="alert alert-warning mt-3" role="alert">
    <p>
        <strong>Dezaktywacja spowoduje nieodwracalne usunięcie konta oraz produktów z nim powiązanych. Operacja będzie nieodwracalna.</strong>
    </p>
</div>

<div class="row">
    <form id="delete-user" method="post" class="form-group col-md-6 ">
            <div class="form-group">
                <label asp-for="Input.Password">Hasło</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        <button class="btn btn-submit-xsm mt-4 mobileCenter" type="submit">Potwierdź</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}