@model JustSellIt.Application.ViewModels.Product.ListFavouritProducts

@{
    ViewData["Title"] = "Moje ulubione";
}

<partial name="_AlertPanel" />

<form id="searchForm" asp-action="MyFavourites" asp-controller="Product" method="get">
    <input id="submitSearch" type="submit" value="Zobacz wszystkie" class="btn btn-submit" hidden="hidden" />

    <div>

        @{
            if (Model.Count == 0)
            {
                <h1 class="add-title mt-5" style="font-weight:bold;text-align:center">Nie posiadasz ulubionych ogłoszeń</h1>
                <div class="not-found text-center mb-4">
                    <img class="img-fluid" src="~/images/other/favourite.png" alt="Not Found" />
                </div>
            }
            else
            {
                <h1 class="add-title mt-5 mb-5" style="font-weight:bold;text-align:center">Ulubione ogłoszenia</h1>

                <partial name="_ProductTile" />
            }
        }

        @{
            if (Model.Count != 0)
            {
                <partial name="_Pagination" />
            }
        }


    </div>
</form>