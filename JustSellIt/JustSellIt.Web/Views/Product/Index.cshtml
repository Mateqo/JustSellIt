@model JustSellIt.Application.ViewModels.Product.ListProductForListVm

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" asp-controller="Product" method="post">
    <div class="row">
        <input type="text" asp-for="SearchString" id="searchString" />
        <input type="submit" id="submitSearch" value="wyszukaj" />
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Title
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "ViewProduct", new { productId = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        @for (int i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
        {
        <div class="inline-block" style="border:1px solid black">
            @if (i != Model.ActualPage)
            {
                <a href="#" onclick="PagerClick(@i)">@i </a>
            }
            else
            {
                <a href="#" onclick="PagerClick(@i)">@i (obecna) </a>
            }
        </div>
        }
        <input type="hidden" asp-for="ActualPage" id="actualPage" />
        <input type="hidden" asp-for="PageSize" id="pageSize" />
    </div>
</form>


@section Scripts
{
    <script type="text/javascript">
        function PagerClick(index) {
            $("#actualPage").val(index);
            $("#submitSearch").click();
        }
    </script>
}