@model JustSellIt.Application.ViewModels.Product.ListProductForListVm

@{
    ViewData["Title"] = "Index";
}


<form asp-action="Index" asp-controller="Product" method="post">

    <div class="search mt-4">
        <div class="input-group">
            <i class="fas fa-search input-icon"></i>
            <input type="text" asp-for="SearchString" id="searchString" class="form-control input-search-title" autocomplete="off" placeholder="Tutaj wpisz co cię interesuje..." />
            <div class="input-group-append">
                <i class="fas fa-map-marker-alt input-icon"></i>
                <input type="text" placeholder="Cała Polska" class="form-control input-search-location" />
            </div>
            <div class="input-group-append">
                <button type="submit" id="submitSearch" value="Szukaj" class="btn btn-search">Szukaj <i class="fas fa-search"></i></button>
            </div>
        </div>
    </div>

    <div class="row-full">



        <div class="category mt-5 pt-4 pb-5">

            <h1 class="add-title" style="font-weight:bold;">Kategorie główne</h1>

            <div class="row mt-4">
                @{foreach (var category in Model.Categories)
                    {
                        <div class="col-6 col-sm-3 col-md-2 mt-4 category-item">
                            <div class="category-item-img" style="background-color:@category.ColorHex;">
                                <img src="/images/categories/@category.Image" alt="@category.Name" />
                            </div>
                            <div class="mt-3">
                                <span>@category.Name</span>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <h1 class="add-title mt-5 mb-5" style="font-weight:bold;text-align:center">Najnowsze ogłoszenia</h1>

    <div class="row">
        @{foreach (var product in Model.Products)
            {
                <div class="col-md-3 mt-4">
                    <div class="tile">
                        <img src="/images/other/none.png" alt="Image product" class="img-fluid " />
                        <hr />
                        <h3>Rowe górski</h3>
                        <span>Wrocław</span><span>18.02.2021</span>
                        <h4>747 zł</h4>
                        <i class="far fa-heart"></i>
                    </div>
                </div>
            }
        }
    </div>

   <div class="text-center mt-5 mb-4">
       <input type="submit" value="Zobacz wszystkie" class="btn btn-submit"/>
   </div>

</form>

@section Scripts
{
    <script type="text/javascript">
        function PagerClick(index) {
            $("#actualPage").val(index);
            $("#submitSearch").click();
        }
    </script>
}